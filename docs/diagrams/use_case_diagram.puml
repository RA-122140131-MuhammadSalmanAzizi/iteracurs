@startuml Use Case Diagram

left to right direction
skinparam packageStyle rectangle

actor "Customer" as customer
actor "Dosen (Instructor)" as dosen
actor "Admin" as admin

package "Course Platform" {
    
    rectangle "Authentication" {
        usecase "Login" as UC_Login
        usecase "Register" as UC_Register
        usecase "Manage Profile" as UC_Profile
    }

    rectangle "Course Discovery" {
        usecase "Browse Courses" as UC_Browse
        usecase "Search Course" as UC_Search
        usecase "View Course Detail" as UC_Detail
        usecase "Manage Wishlist" as UC_Wishlist
    }

    rectangle "Learning" {
        usecase "Enroll in Course" as UC_Enroll
        usecase "Watch Video/Read PDF" as UC_Watch
        usecase "Take Quiz" as UC_Quiz
        usecase "Claim Certificate" as UC_Certificate
        usecase "Write Review" as UC_Review
    }

    rectangle "Course Management (Dosen)" {
        usecase "Upload Course" as UC_Upload
        usecase "Manage Course Content" as UC_ManageContent
        usecase "View Student Progress" as UC_ViewStudents
    }

    rectangle "Admin Management" {
        usecase "Manage Users (Search/Status)" as UC_ManageUsers
        usecase "Approve/Reject Reviews" as UC_ApproveReviews
        
        package "System Settings" {
            usecase "Manage Categories" as UC_ManageCategories
            usecase "Manage Levels" as UC_ManageLevels
            usecase "Configure Global Settings" as UC_GlobalSettings
        }
    }
}

' Relationships
customer --> UC_Login
customer --> UC_Register
customer --> UC_Browse
customer --> UC_Search
customer --> UC_Detail
customer --> UC_Enroll
customer --> UC_Watch
customer --> UC_Quiz
customer --> UC_Certificate
customer --> UC_Review
customer --> UC_Profile
customer --> UC_Wishlist

dosen --> UC_Login
dosen --> UC_Upload
dosen --> UC_ManageContent
dosen --> UC_ViewStudents
dosen --> UC_Profile

admin --> UC_Login
admin --> UC_ManageUsers
admin --> UC_ApproveReviews
admin --> UC_ManageCategories
admin --> UC_ManageLevels
admin --> UC_GlobalSettings

' Dependencies
UC_Enroll ..> UC_Login : <<include>>
UC_Watch ..> UC_Enroll : <<include>>
UC_Quiz ..> UC_Watch : <<extends>>
UC_Certificate ..> UC_Quiz : <<include>> (Pass Quiz)
UC_ApproveReviews ..> UC_Review : <<include>>

@enduml
